<header>
    <% if current_user %>
    <p><%= link_to "ホーム", root_path%></p>
    <p>こんにちわ、<%= link_to current_user.name,users_show_path %></p>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    
    <% else %>
    <%= link_to "サインイン", new_user_session_path %>
    <%= link_to "ユーザ登録", new_user_registration_path %>
   
    <% end %>
    <hr>
</header>
<h1>プロフィール</h1>

<p>
   <% if @user.avatar.attached? %>
     <%= image_tag @user.avatar %>
   <% end %>
 </p>

<h3>名前</h3>
<%= @user.name %>

<h3>年齢</h3>
<%= @user.age %>


<h3>メールアドレス</h3>
<%= @user.email %> 